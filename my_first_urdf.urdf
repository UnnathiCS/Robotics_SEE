<?xml version="1.0"?>
<robot name="my_robot">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.2 0.2 0.5"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
    </link>
    <link name="right_link">
        <visual>
            <geometry>
                <box size="0.05 0.05 0.4"/>
            </geometry>
            <origin xyz="0 0 0.2" rpy="0 0 0"/>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>
    <joint name="base_right_arm_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_link"/>
        <origin xyz="0 -0.125 0.2" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
</robot>